group exabgp {
    router-id 10.0.0.1;
    neighbor 10.0.0.2 {
        local-address 10.0.0.1;
        local-as 65001;
        peer-as 65002;
        static {
            route 10.1.0.0/24 next-hop 10.0.0.2;
            route 10.2.0.0/24 next-hop 10.0.0.2;
            route 10.3.0.0/24 next-hop 10.0.0.2;
        }
    }
}

process exabgp {
    encoder json;
    run /usr/local/bin/exabgp /etc/exabgp/exabgp.config;
}